package CosPro1;

public class 계산기by문자열 {
		
	  public static void main(String[] args) {
		  	계산기by문자열 sol = new 계산기by문자열();
	        String expression = "123+12";
	        int ret = sol.solution(expression);

	        // [실행] 버튼을 누르면 출력 값을 볼 수 있습니다.
	        System.out.println("solution 메소드의 반환 값은 " + ret + " 입니다.");
	    }

	private int solution(String expression) {
		String a[] = expression.split("");
		int answer =0,i=0;
		String x[] = null;
		for(i= 0; i<expression.length();i++) {
			if(a[i]=="*") {
				x = expression.split("*");
				System.out.println(x[0]);
				//answer = Integer.valueOf(x[0])*Integer.valueOf(x[1]);
			}else if(a[i].equals("+")==true) {
				x = expression.split("+");
				System.out.println(x[0]);
				//answer = Integer.valueOf(x[0])+Integer.valueOf(x[1]);
			}else {
				x = expression.split("-");
				//answer = Integer.valueOf(x[0])-Integer.valueOf(x[1]);
			}
			
		}
		return answer;
	}
	
}
