package Level1;

public class HarshadNumber {

	  public static void  main(String[] args){
	        HarshadNumber sn = new HarshadNumber();
	        System.out.println(sn.solution(18));
	    }

	  public boolean solution(int x) {
	        boolean answer = true;
	        int x1 = x;
	        int i = 0, a = 0;
	        for(i = 10000;i != 0; i/=10){
	            if(i<=x){
	                break;
	            }
	        }
	        for(int j = i; j >= 9; j/=10){
	            a+=x/j;
	            System.out.println(a);
	            x-=(x/j)*j;
	        }
	        a+=x;
	        System.out.println(a);
	        if(x1%a!=0){
	            answer = false;
	        }
	        return answer;
	    }
	}
